# Database configuration (used by SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://rent:rent_password@localhost:5433/rent_finder

# Redis configuration (used by Taskiq broker and result backend)
REDIS_URL=redis://localhost:6380/0

# Public Data Portal API Key (for MOLIT apartment rent data)
# Get your key from: https://www.data.go.kr/
# Leave empty to use mock data for testing
PUBLIC_DATA_API_KEY=

# Public Data Portal API base URL
PUBLIC_DATA_API_BASE_URL=https://apis.data.go.kr/1613000/

# Application environment
APP_ENV=local

# Testing mode (set to 'true' to use in-memory broker, no Redis required)
TASKIQ_TESTING=false

# API request timeout (seconds)
PUBLIC_DATA_REQUEST_TIMEOUT_SECONDS=10.0

# How many months of data to fetch (1-24)
PUBLIC_DATA_FETCH_MONTHS=2

# Target property types (comma-separated)
# Valid values: apt (아파트), villa (연립다세대), officetel (오피스텔)
TARGET_PROPERTY_TYPES=apt

# Target region codes (comma-separated, e.g., "11110,11140")
# Default: 11110 (Jongno-gu, Seoul)
TARGET_REGION_CODES=11110

# MCP tool allowlist (optional, comma-separated)
# Leave unset or empty to enable all tools (default, backward-compatible)
# Example: MCP_ENABLED_TOOLS=search_rent,list_regions
# Stage 4 Zigbang-only recommended profile:
# MCP_ENABLED_TOOLS=search_rent,list_regions,search_regions,add_favorite,list_favorites,remove_favorite,manage_favorites
# Invalid tool names cause MCP server startup failure
MCP_ENABLED_TOOLS=

# Telegram notification settings (optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Cache settings (optional)
CRAWL_DEDUP_TTL_SECONDS=3600
LISTING_CACHE_TTL_SECONDS=1800
